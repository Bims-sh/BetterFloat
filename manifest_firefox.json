{
    "name": "BetterFloat",
    "author": "Rums",
	"version": "1.2.0",
    "description": "Enhance your experience on CSFloat.com",
    "manifest_version": 3,
    "host_permissions": ["*://prices.csgotrader.app/*", "*://csfloat.com/*"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://csfloat.com/*", "https://csgofloat.com/*"],
            "js": ["js/content_script.js"],
            "css": ["css/stylesheet.css"],
            "run_at": "document_idle"
        },
		{
			"matches": ["https://csfloat.com/*", "https://csgofloat.com/*"],
			"js": ["js/Injectionhandler.js"],
			"run_at": "document_start"
		}
    ],
    "icons": {
        "128": "public/betterfloat_logo128.png"
    },
    "action": {
        "default_popup": "/html/index.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "betterfloat@rums.dev",
            "strict_min_version": "109.0"
        },
		"safari": {
		  "strict_min_version": "14"
		}
    },
    "permissions": ["storage"],
    "web_accessible_resources": [
        {
            "matches": ["https://csfloat.com/*", "https://csgofloat.com/*"],
            "resources": ["public/buff_favicon.png", "public/clock-solid.svg", "js/inject.js"]
        }
    ]
}
