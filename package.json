{
	"name": "betterfloat",
	"displayName": "BetterFloat",
	"version": "2.0.0",
	"description": "Enhance your experience on CSFloat.com, Skinport.com & Skinbid.com!",
	"author": "Rums",
	"license": "MIT",
	"homepage": "https://github.com/GODrums/BetterFloat",
	"scripts": {
		"dev": "plasmo dev",
		"dev:firefox": "plasmo dev --target=firefox-mv3",
		"build": "plasmo build",
		"build:firefox": "plasmo build --target=firefox-mv3",
		"package": "plasmo package",
		"clean": "rimraf dist && rimraf build",
		"lint": "eslint ./src --ext .ts,.tsx"
	},
	"dependencies": {
		"@plasmohq/storage": "^1.9.3",
		"@radix-ui/react-accordion": "^1.1.2",
		"@radix-ui/react-avatar": "^1.0.4",
		"@radix-ui/react-checkbox": "^1.0.4",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-popover": "^1.0.7",
		"@radix-ui/react-scroll-area": "^1.0.5",
		"@radix-ui/react-select": "^2.0.0",
		"@radix-ui/react-slot": "^1.0.2",
		"@radix-ui/react-switch": "^1.0.3",
		"@radix-ui/react-tabs": "^1.0.4",
		"@radix-ui/react-toast": "^1.1.5",
		"@radix-ui/react-tooltip": "^1.0.7",
		"@tsparticles/engine": "^3.3.0",
		"@tsparticles/react": "^3.0.0",
		"@tsparticles/slim": "^3.3.0",
		"@types/webextension-polyfill": "^0.10.7",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
		"framer-motion": "^11.0.8",
		"plasmo": "0.84.2",
		"react": "18.2.0",
		"react-colorful": "^5.6.1",
		"react-dom": "18.2.0",
		"socket.io-client": "^4.7.4",
		"tailwind-merge": "^2.2.1",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "4.1.1",
		"@radix-ui/colors": "2.1.0",
		"@types/chrome": "0.0.262",
		"@types/node": "20.11.5",
		"@types/react": "18.2.48",
		"@types/react-dom": "18.2.18",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"cs-tierlist": "^1.2.1",
		"csgo-fade-percentage-calculator": "^1.1.3",
		"currency-symbol-map": "^5.1.0",
		"decimal.js": "^10.4.3",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^9.1.0",
		"postcss": "8.4.33",
		"prettier": "3.2.4",
		"rimraf": "^5.0.5",
		"tailwindcss": "3.4.1",
		"typescript": "5.3.3",
		"webextension-polyfill": "^0.10.0"
	},
	"manifest": {
		"web_accessible_resources": [
			{
				"matches": [
					"https://*.csfloat.com/*",
					"https://*.skinport.com/*",
					"https://*.skinbid.com/*"
				],
				"resources": [
					"inject.ts"
				]
			}
		],
		"key": "$CRX_PUBLIC_KEY",
		"browser_specific_settings": {
			"gecko": {
				"id": "$FIREFOX_EXT_ID",
				"strict_min_version": "109.0"
			}
		},
		"host_permissions": [
			"https://*.csfloat.com/*",
			"https://*.skinport.com/*",
			"https://*.skinbid.com/*"
		]
	}
}
