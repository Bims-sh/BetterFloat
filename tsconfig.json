{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "bundler",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": ["node_modules/@types"],
        "forceConsistentCasingInFileNames": true,
        "exactOptionalPropertyTypes": true,
    },
    "exclude": ["node_modules"],
    "include": ["src/*.ts", "src/util/extensionsettings.ts", "src/csfloat/content_script.ts", "src/eventhandler.ts"]
}
